<html>
<head>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 flex items-center justify-center min-h-screen">
    <div class="w-full max-w-md">
        <form action="/admin/login" method="post" style="position: relative; left: 226px; top: 10px;" class=" shadow-lg rounded-lg px-8 pt-10 pb-8 mb-4">
            <h2 class="text-white text-3xl font-semibold mb-8 text-center">Login</h2>
            <div class="mb-6">
                <label class="block text-gray-400 text-sm font-semibold mb-2" for="email">
                    Email
                </label>
                <input class="shadow appearance-none border border-gray-700  w-full py-2 px-4 text-gray-300 leading-tight focus:outline-none focus:ring-2 focus:ring-purple-600 bg-gray-700" name="email" id="email" type="text" placeholder="Enter your email">
            </div>
            <div class="mb-8">
                <label class="block text-gray-400 text-sm font-semibold mb-2" for="password">
                    Password
                </label>
                <input class="shadow appearance-none border border-gray-700  w-full py-2 px-4 text-gray-300 leading-tight focus:outline-none focus:ring-2 focus:ring-purple-600 bg-gray-700" name="password" id="password" type="password" placeholder="Enter your password">
            </div>
            <div class="flex items-center justify-between">
                <button class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-4 w-full  focus:outline-none focus:ring-2 focus:ring-purple-600" type="submit">
                    Log in
                </button>
            </div>
        </form>
    </div>
</body>
</html>