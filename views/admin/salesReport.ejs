  <script>
 $(document).ready(function () {
  console.log("Orders Data:", <%- JSON.stringify(report.orders) %>);

  try {
    console.log("Document ready, initializing scripts");

    // Date Range Picker
    $('#dateRangePicker').daterangepicker({
      startDate: '<%= startDate || moment().subtract(29, "days").format("YYYY-MM-DD") %>',
      endDate: '<%= endDate || moment().format("YYYY-MM-DD") %>',
      opens: 'left',
      locale: { format: 'YYYY-MM-DD' },
      ranges: {
        'Today': [moment(), moment()],
        'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
        'Last 7 Days': [moment().subtract(6, 'days'), moment()],
        'Last 30 Days': [moment().subtract(29, 'days'), moment()],
        'This Month': [moment().startOf('month'), moment().endOf('month')],
        'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
      }
    }, function (start, end) {
      console.log("Date Range Selected:", { start: start.format('YYYY-MM-DD'), end: end.format('YYYY-MM-DD') });
      const quickSelect = $('#quickDateSelect').val();
      const compareWith = $('#compareWithSelect').val();
      const url = `/admin/reports/sales?startDate=${start.format('YYYY-MM-DD')}&endDate=${end.format('YYYY-MM-DD')}&quickSelect=custom&compareWith=${compareWith}`;
      console.log("Redirecting to:", url);
      window.location.href = url;
    });

    // Sync Quick Select with Date Picker
    $('#quickDateSelect').change(function () {
      const value = $(this).val();
      const compareWith = $('#compareWithSelect').val();
      let startDate, endDate;
      switch (value) {
        case 'today': startDate = moment().format('YYYY-MM-DD'); endDate = moment().format('YYYY-MM-DD'); break;
        case 'last7days': startDate = moment().subtract(6, 'days').format('YYYY-MM-DD'); endDate = moment().format('YYYY-MM-DD'); break;
        case 'last30days': startDate = moment().subtract(29, 'days').format('YYYY-MM-DD'); endDate = moment().format('YYYY-MM-DD'); break;
        case 'year': startDate = moment().startOf('year').format('YYYY-MM-DD'); endDate = moment().format('YYYY-MM-DD'); break;
        default: return;
      }
      $('#dateRangePicker').data('daterangepicker').setStartDate(startDate);
      $('#dateRangePicker').data('daterangepicker').setEndDate(endDate);
      const url = `/admin/reports/sales?startDate=${startDate}&endDate=${endDate}&quickSelect=${value}&compareWith=${compareWith}`;
      console.log("Quick Select Redirecting to:", url);
      window.location.href = url;
    });

    $('#compareWithSelect').change(function () {
      const compareWith = $(this).val();
      const startDate = '<%= startDate %>';
      const endDate = '<%= endDate %>';
      const quickSelect = $('#quickDateSelect').val();
      const url = `/admin/reports/sales?startDate=${startDate}&endDate=${endDate}&quickSelect=${quickSelect}&compareWith=${compareWith}&_=${new Date().getTime()}`;
      console.log("Compare With Redirecting to:", url);
      window.location.href = url;
    });

    // Tab Navigation
    console.log("Binding tab click events");
    $('.tab-button').click(function () {
      const tabId = $(this).data('tab');
      console.log("Click detected on tab:", tabId);
      $('.tab-button').removeClass('active');
      $(this).addClass('active');
      const $targetTab = $('#' + tabId);
      if ($targetTab.length) {
        $('.tab-content').removeClass('active');
        $targetTab.addClass('active');
        console.log('Switched to tab:', tabId);
      } else {
        console.error('Tab content not found for ID:', tabId);
      }
    });
    const urlParams = new URLSearchParams(window.location.search);
    const activeTab = urlParams.get('tab') || 'overview';
    console.log("Initializing active tab:", activeTab);
    $(`.tab-button[data-tab="${activeTab}"]`).click();

    $('#orderStatusFilter').on('change', function () {
      try {
        const status = $(this).val();
        console.log('Filter orders by status:', status);
        const datePicker = $('#dateRangePicker').data('daterangepicker');
        if (!datePicker) {
          console.error('DateRangePicker not initialized');
          return;
        }
        const startDate = datePicker.startDate.format('YYYY-MM-DD');
        const endDate = datePicker.endDate.format('YYYY-MM-DD');
        const quickSelect = $('#quickDateSelect').val();
        const compareWith = $('#compareWithSelect').val();
        const url = `/admin/reports/sales?page=1&startDate=${startDate}&endDate=${endDate}&quickSelect=${quickSelect}&compareWith=${compareWith}&orderStatus=${status}&tab=orders`;
        console.log("Redirecting to:", url);
        window.location.href = url;
      } catch (error) {
        console.error('Error in orderStatusFilter change:', error);
      }
    });

    $('#inventoryStatusFilter').change(function () {
      const status = $(this).val();
      console.log('Filter inventory by status:', status);
      const startDate = $('#dateRangePicker').data('daterangepicker').startDate.format('YYYY-MM-DD');
      const endDate = $('#dateRangePicker').data('daterangepicker').endDate.format('YYYY-MM-DD');
      const quickSelect = $('#quickDateSelect').val();
      const compareWith = $('#compareWithSelect').val();
      const url = `/admin/reports/sales?page=1&startDate=${startDate}&endDate=${endDate}&quickSelect=${quickSelect}&compareWith=${compareWith}&inventoryFilter=${status}&tab=products`;
      console.log("Redirecting to:", url);
      window.location.href = url;
    });

    $('#downloadReport').click(function (e) {
      e.preventDefault();
      $('.dropdown-menu').toggleClass('hidden');
    });

    $(document).click(function (e) {
      if (!$(e.target).closest('.dropdown').length) {
        $('.dropdown-menu').addClass('hidden');
      }
    });

    $('#downloadPdf').click(function (e) {
      e.preventDefault();
      const startDate = $('#dateRangePicker').data('daterangepicker').startDate.format('YYYY-MM-DD');
      const endDate = $('#dateRangePicker').data('daterangepicker').endDate.format('YYYY-MM-DD');
      const quickSelect = $('#quickDateSelect').val();
      const compareWith = $('#compareWithSelect').val();
      const orderStatus = $('#orderStatusFilter').val();
      const tab = $('.tab-button.active').data('tab') || 'overview';
      const url = `/admin/reports/sales/download/pdf?startDate=${startDate}&endDate=${endDate}&quickSelect=${quickSelect}&compareWith=${compareWith}&orderStatus=${orderStatus}&tab=${tab}`;
      console.log('Downloading PDF from:', url);
      window.location.href = url;
    });

    $('#downloadExcel').click(function (e) {
      e.preventDefault();
      const startDate = $('#dateRangePicker').data('daterangepicker').startDate.format('YYYY-MM-DD');
      const endDate = $('#dateRangePicker').data('daterangepicker').endDate.format('YYYY-MM-DD');
      const quickSelect = $('#quickDateSelect').val();
      const compareWith = $('#compareWithSelect').val();
      const orderStatus = $('#orderStatusFilter').val();
      const tab = $('.tab-button.active').data('tab') || 'overview';
      const url = `/admin/reports/sales/download/excel?startDate=${startDate}&endDate=${endDate}&quickSelect=${quickSelect}&compareWith=${compareWith}&orderStatus=${orderStatus}&tab=${tab}`;
      console.log('Downloading Excel from:', url);
      window.location.href = url;
    });

  } catch (error) {
    console.error("Critical error initializing scripts:", error.stack);
  }
  console.log("Script initialization completed");
});
  </script>
