        <div id="orders" class="tab-content">
          <div class="card">
            <div class="p-3 border-b border-gray-700 flex justify-between items-center">
              <h5 class="text-sm font-semibold text-white">Detailed Orders</h5>
              <select class="bg-gray-700 text-gray-300 px-2 py-1 rounded text-xs" id="orderStatusFilter">
                <option value="all" <%= orderStatus === 'all' ? 'selected' : '' %>>All Statuses</option>
                <option value="Delivered" <%= orderStatus === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                <option value="Shipped" <%= orderStatus === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                <option value="Processing" <%= orderStatus === 'Processing' ? 'selected' : '' %>>Processing</option>
                <option value="Cancelled" <%= orderStatus === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                <option value="Returned" <%= orderStatus === 'Returned' ? 'selected' : '' %>>Returned</option>
              </select>
            </div>
            <div class="overflow-x-auto max-h-96">
              <table class="table">
                <thead>
                  <tr>
                    <th>Order ID</th>
                    <th>Date</th>
                    <th>Customer</th>
                    <th>Products</th>
                    <th>Subtotal</th>
                    <th>Discount</th>
                    <th>Coupon</th>
                    <th>Total</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (report.orders && report.orders.length > 0) { %>
                    <% report.orders.forEach(order => { %>
                      <tr class="hover:bg-gray-700">
                        <td>#ORD-<%= order.orderId || 'N/A' %></td>
                        <td><%= new Date(order.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></td>
