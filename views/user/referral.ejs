<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Referrals | Furniture E-commerce</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #f8f9fa;
            --accent-color: #ff6b6b;
            --success-color: #4cd964;
            --warning-color: #ffcc00;
            --info-color: #5ac8fa;
            --text-dark: #333333;
            --text-light: #6c757d;
            --border-radius: 10px;
            --card-shadow: 0 10px 20px rgba(0,0,0,0.05);
            --transition: all 0.3s ease;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: var(--text-dark);
        }
        
        .account-container {
            max-width: 1400px;
            margin: 2rem auto;
            padding: 0 1rem;
        }
        
        .page-title {
            font-weight: 700;
            margin-bottom: 2rem;
            color: var(--primary-color);
            padding-bottom: 1rem;
        }
        
        /* Referral Header */
        .referral-welcome {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            padding: 2rem;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }
        
        .referral-welcome::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 200px;
            height: 200px;
            background: url('/api/placeholder/200/200') no-repeat;
            opacity: 0.05;
            z-index: 1;
        }
        
        .referral-welcome h2 {
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 1rem;
        }
        
        .referral-welcome p {
            color: var(--text-light);
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 0;
        }
        
        /* Referral Info Cards */
        .referral-info-row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 2rem;
        }
        
        .referral-info-card {
            flex: 1;
            min-width: 250px;
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            padding: 1.5rem;
            transition: var(--transition);
            border-top: 4px solid var(--primary-color);
        }
        
        .referral-info-card:hover {
            transform: translateY(-5px);
        }
        
        .referral-info-card.wallet {
            border-top-color: var(--success-color);
        }
        
        .referral-info-card.code {
            border-top-color: var(--accent-color);
        }
        
        .info-card-title {
            font-size: 0.9rem;
            color: var(--text-light);
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .info-card-value {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
        }
        
        .referral-code {
            font-family: monospace;
            letter-spacing: 1px;
        }
        
        .copy-btn {
            background-color: #f8f9fa;
            border: none;
            color: var(--primary-color);
            border-radius: 50px;
            padding: 0.4rem 1rem;
            font-size: 0.85rem;
            font-weight: 600;
            margin-left: 1rem;
            transition: var(--transition);
        }
        
        .copy-btn:hover {
            background-color: var(--primary-color);
            color: white;
        }
        
        .info-card-desc {
            color: var(--text-light);
            font-size: 0.9rem;
            margin: 0;
        }
        
        /* Share Options */
        .share-options {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .share-title {
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 1rem;
        }
        
        .share-buttons {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }
        
        .share-btn {
            padding: 0.7rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            transition: var(--transition);
            color: white;
            border: none;
        }
        
        .share-btn i {
            margin-right: 8px;
        }
        
        .share-btn.whatsapp {
            background-color: #25D366;
        }
        
        .share-btn.facebook {
            background-color: #3b5998;
        }
        
        .share-btn.twitter {
            background-color: #1DA1F2;
        }
        
        .share-btn.email {
            background-color: #BB001B;
        }
        
        .share-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        /* Referred Users Section */
        .referred-users-card {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .referred-users-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            border-bottom: 1px solid #f0f0f0;
            padding-bottom: 1rem;
        }
        
        .referred-users-header h3 {
            color: var(--text-dark);
            font-weight: 600;
            margin-bottom: 0;
            font-size: 1.25rem;
        }
        
        .referred-users-count {
            background-color: var(--primary-color);
            color: white;
            border-radius: 50px;
            padding: 0.3rem 1rem;
            font-size: 0.85rem;
            font-weight: 600;
        }
        
        .referred-users-table-container {
            overflow-x: auto;
            margin-bottom: 1.5rem;
        }
        
        .referred-users-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }
        
        .referred-users-table th {
            background-color: #f8f9fa;
            color: var(--text-light);
            font-weight: 600;
            padding: 1rem;
            text-align: left;
            border-bottom: 2px solid #e9ecef;
            font-size: 0.9rem;
        }
        
        .referred-users-table td {
            padding: 1rem;
            border-bottom: 1px solid #e9ecef;
            color: var(--text-dark);
            font-size: 0.95rem;
        }
        
        .referred-users-table tbody tr:hover {
            background-color: #f8f9fa;
        }
        
        .referral-user-cell {
            display: flex;
            align-items: center;
        }
        
        .referral-user-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background-color: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 0.75rem;
            color: var(--primary-color);
            font-weight: 600;
        }
        
        .status-badge {
            padding: 0.3rem 0.8rem;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 600;
            display: inline-block;
        }
        
        .status-badge.success {
            background-color: #e6f9f0;
            color: var(--success-color);
        }
        
        .status-badge.pending {
            background-color: #fff8dd;
            color: var(--warning-color);
        }
        
        .no-referrals {
            text-align: center;
            padding: 2rem;
            color: var(--text-light);
            background-color: #f8f9fa;
            border-radius: var(--border-radius);
        }
        
        .no-referrals i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #dee2e6;
        }
        
        .no-referrals h4 {
            margin-bottom: 0.5rem;
            font-weight: 600;
        }
        
        .pagination-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .load-more-btn {
            background: var(--primary-color);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            cursor: pointer;
            transition: var(--transition);
            font-weight: 600;
            font-size: 0.9rem;
        }
        
        .load-more-btn:hover {
            background: #3651d4;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .load-more-btn i {
            margin-right: 8px;
        }
        
        .page-indicator {
            color: var(--text-light);
            font-size: 0.9rem;
            margin: 0;
        }
        
        /* How It Works Section */
        .how-it-works {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .how-it-works h3 {
            color: var(--text-dark);
            font-weight: 600;
            margin-bottom: 1.5rem;
            font-size: 1.25rem;
        }
        
        .steps-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        
        .step-card {
            flex: 1;
            min-width: 200px;
            padding: 1.25rem;
            background-color: #f8f9fa;
            border-radius: var(--border-radius);
            position: relative;
        }
        
        .step-number {
            position: absolute;
            top: -10px;
            left: -10px;
            width: 30px;
            height: 30px;
            background-color: var(--primary-color);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 0.9rem;
        }
        
        .step-title {
            font-weight: 600;
            margin-bottom: 0.75rem;
            color: var(--text-dark);
        }
        
        .step-desc {
            color: var(--text-light);
            font-size: 0.9rem;
            margin: 0;
        }
        
        @media (max-width: 768px) {
            .referral-info-row {
                flex-direction: column;
            }
            
            .step-card {
                min-width: 100%;
            }
            
            .share-buttons {
                flex-direction: column;
            }
            
            .share-btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/user/Header') %>
    <%- include('../partials/user/profileHeader') %>

    <div class="account-container">
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-12">
                <!-- Welcome Section -->
                <div class="referral-welcome">
                    <h2>Invite Friends & Earn Rewards</h2>
                    <p>Share your unique referral code with friends and earn ₹200 for each friend who signs up using your code. Your friend also gets ₹50 on their first purchase!</p>
                </div>
                
                <!-- Referral Info Cards -->
                <div class="referral-info-row">
                    <!-- Referral Code Card -->
                    <div class="referral-info-card code">
                        <div class="info-card-title">Your Referral Code</div>
                        <div class="info-card-value">
                            <span class="referral-code"><%= user.referralCode %></span>
                            <button class="copy-btn" onclick="copyToClipboard('referralCode')">
                                <i class="fas fa-copy"></i> Copy
                            </button>
                        </div>
                        <p class="info-card-desc">Share this code with your friends</p>
                    </div>
                    
                    <!-- Wallet Balance Card -->
                    <div class="referral-info-card wallet">
                        <div class="info-card-title">Wallet Balance</div>
                        <div class="info-card-value">₹<%= wallet.toFixed(2) %></div>
                        <p class="info-card-desc">Total earnings from referrals</p>
                    </div>
                    
                    <!-- Total Referrals Card -->
                    <div class="referral-info-card">
                        <div class="info-card-title">Total Referrals</div>
                        <div class="info-card-value"><%= totalReferrals %></div>
                        <p class="info-card-desc">Friends who joined using your code</p>
                    </div>
                </div>
                
                <!-- Share Options -->
                <div class="share-options">
                    <h3 class="share-title">Share Your Referral Code</h3>
                    <div class="share-buttons">
                        <button class="share-btn whatsapp" onclick="shareViaWhatsApp()">
                            <i class="fab fa-whatsapp"></i> WhatsApp
                        </button>
                        <button class="share-btn facebook" onclick="shareViaFacebook()">
                            <i class="fab fa-facebook-f"></i> Facebook
                        </button>
                        <button class="share-btn twitter" onclick="shareViaTwitter()">
                            <i class="fab fa-twitter"></i> Twitter
                        </button>
                        <button class="share-btn email" onclick="shareViaEmail()">
                            <i class="fas fa-envelope"></i> Email
                        </button>
                    </div>
                </div>
                
                <!-- Referred Users Section -->
                <div class="referred-users-card">
                    <div class="referred-users-header">
                        <h3>Friends You've Referred</h3>
                        <span class="referred-users-count"><%= totalReferrals %> Total</span>
                    </div>
                    
                    <div class="referred-users-table-container">
                        <% if(referredUsers && referredUsers.length > 0) { %>
                            <table class="referred-users-table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Joined On</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody id="referredUsersTable">
                                    <% referredUsers.forEach(function(user) { %>
                                        <tr>
                                            <td>
                                                <div class="referral-user-cell">
                                                    <div class="referral-user-avatar">
                                                        <%= user.name.charAt(0) %>
                                                    </div>
                                                    <%= user.name %>
                                                </div>
                                            </td>
                                            <td><%= user.email %></td>
                                            <td><%= new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></td>
                                            <td>
                                                <span class="status-badge <%= user.status === 'Active' ? 'success' : 'pending' %>">
                                                    <%= user.status %>
                                                </span>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <div class="no-referrals">
                                <i class="fas fa-user-friends"></i>
                                <h4>No referrals yet</h4>
                                <p>Start sharing your code with friends!</p>
                            </div>
                        <% } %>
                    </div>
                    
                    <!-- Pagination -->
                    <% if(referredUsers && referredUsers.length > 0) { %>
                        <div class="pagination-container">
                            <% if(hasMore) { %>
                                <button id="loadMoreBtn" class="load-more-btn" onclick="loadMoreReferrals(<%= currentPage + 1 %>)">
                                    <i class="fas fa-sync-alt"></i> Load More
                                </button>
                            <% } %>
                            <p class="page-indicator">Showing <span id="currentlyShowing"><%= referredUsers.length %></span> of <span id="totalReferrals"><%= totalReferrals %></span> referrals</p>
                        </div>
                    <% } %>
                </div>
                
                <!-- How It Works Section -->
                <div class="how-it-works">
                    <h3>How It Works</h3>
                    <div class="steps-container">
                        <div class="step-card">
                            <div class="step-number">1</div>
                            <h4 class="step-title">Share Your Code</h4>
                            <p class="step-desc">Share your unique referral code with friends and family through WhatsApp, Facebook, Twitter or Email.</p>
                        </div>
                        <div class="step-card">
                            <div class="step-number">2</div>
                            <h4 class="step-title">Friend Signs Up</h4>
                            <p class="step-desc">Your friend creates an account using your referral code during registration.</p>
                        </div>
                        <div class="step-card">
                            <div class="step-number">3</div>
                            <h4 class="step-title">Both Get Rewarded</h4>
                            <p class="step-desc">You earn ₹200 in your wallet, and your friend gets ₹50 off their first purchase!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function copyToClipboard(elementId) {
            const referralCode = "<%= user.referralCode %>";
            
            navigator.clipboard.writeText(referralCode)
                .then(() => {
                    const copyBtn = document.querySelector('.copy-btn');
                    const originalText = copyBtn.innerHTML;
                    copyBtn.innerHTML = '<i class="fas fa-check"></i> Copied!';
                    copyBtn.disabled = true;
    
                    setTimeout(() => {
                        copyBtn.innerHTML = originalText;
                        copyBtn.disabled = false;
                    }, 2000);
                })
                .catch(err => {
                    console.error('Failed to copy referral code:', err);
                    showAlert('Failed to copy referral code', 'error');
                });
        }
    
        function loadMoreReferrals(page) {
            const loadMoreBtn = document.getElementById('loadMoreBtn');
            loadMoreBtn.disabled = true;
            loadMoreBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Loading...';
    
            fetch(`/user/referral?page=${page}`)
                .then(response => response.text())
                .then(html => {
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    const newReferralContainer = doc.querySelector('.referred-users-card');
    
                    document.querySelector('.referred-users-card').innerHTML = newReferralContainer.innerHTML;
    
                    const hasMore = <%= hasMore %> && (page * 5) < <%= totalReferrals %>;
                    if (!hasMore) {
                        loadMoreBtn.style.display = 'none';
                    } else {
                        loadMoreBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Load More';
                        loadMoreBtn.disabled = false;
                        loadMoreBtn.onclick = () => loadMoreReferrals(page + 1);
                    }
    
                    const showingCount = document.querySelectorAll('#referredUsersTable tr').length;
                    document.getElementById('currentlyShowing').textContent = showingCount;
                })
                .catch(error => {
                    console.error('Error loading more referrals:', error);
                    showAlert('Failed to load more referrals', 'error');
                    loadMoreBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Try Again';
                    loadMoreBtn.disabled = false;
                });
        }
    
        function showAlert(message, type) {
            const alert = document.createElement('div');
            alert.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show`;
            alert.role = 'alert';
            alert.style.position = 'fixed';
            alert.style.top = '20px';
            alert.style.right = '20px';
            alert.style.zIndex = '9999';
            alert.style.maxWidth = '300px';
    
            alert.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            `;
    
            document.body.appendChild(alert);
    
            setTimeout(() => {
                alert.classList.remove('show');
                setTimeout(() => alert.remove(), 150);
            }, 3000);
        }
        
        // Social sharing functions
        function shareViaWhatsApp() {
            const referralCode = "<%= user.referralCode %>";
            const message = `Hey! I'm inviting you to join our LARIS store. Use my referral code: ${referralCode} and get ₹50 off on your first purchase!`;
            const url = `https://wa.me/?text=${encodeURIComponent(message)}`;
            window.open(url, '_blank');
        }
        
        function shareViaFacebook() {
            const referralCode = "<%= user.referralCode %>";
            const url = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(window.location.origin)}&quote=${encodeURIComponent(`Join our furniture store with my referral code: ${referralCode} and get ₹50 off on your first purchase!`)}`;
            window.open(url, '_blank');
        }
        
        function shareViaTwitter() {
            const referralCode = "<%= user.referralCode %>";
            const message = `I'm inviting you to join our furniture store! Use my referral code: ${referralCode} and get ₹50 off on your first purchase!`;
            const url = `https://twitter.com/intent/tweet?text=${encodeURIComponent(message)}`;
            window.open(url, '_blank');
        }
        
        function shareViaEmail() {
            const referralCode = "<%= user.referralCode %>";
            const subject = "Join our furniture store with my referral code";
            const body = `Hey! I'm inviting you to join our furniture store. Use my referral code: ${referralCode} and get ₹50 off on your first purchase!`;
            const url = `mailto:?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
            window.location.href = url;
        }
    </script>
</body>
</html>